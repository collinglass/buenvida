.text-center
  = image_tag @memory.image.url(:medium)
  .form-wrapper
    = simple_form_for @memory, html: { class: 'form-horizontal', multipart: true } do |f|
      .form-group
        = f.input :image
      .form-group.text-center
        = f.input :caption
      .form-group.text-center
        = f.button :submit, class: 'btn-success'
      .text-center.edit-links
        = link_to "Delete Memory", memory_path(@memory), method: :delete, data: { confirm: "Are you sure you want to delete this memory?" }
        |
        = link_to "cancel", memories_path